<!-- In your nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/myFeedFragment">

    <fragment
        android:id="@+id/myFeedFragment"
        android:name="com.example.ecommerce.views.home.MyFeedFragment"
        android:label="My Feed"
        tools:layout="@layout/fragment_my_feed">

        <action
            android:id="@+id/action_myFeedFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.ecommerce.views.home.ProductDetailsFragment"
        android:label="Product Details"
        tools:layout="@layout/fragment_product_details">
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/myProfileFragment"
        android:name="com.example.ecommerce.views.home.MyProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_my_profile">

        <action
            android:id="@+id/action_myProfileFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
</navigation>
